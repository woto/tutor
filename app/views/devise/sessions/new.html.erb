<% @meta_title = "Log in" %>
<%= meta_title class: 'text-xs-center' %>

<%= container do %>
  <%= row do %>
    <%= auth_cols do %>
      <%= page_content do %>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'm-b-1'}) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%# TODO inline_label where addede because of abscence of space between checkbox and label text %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: 'btn-primary' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
